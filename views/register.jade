extends layout

block content
    div(class="container-fluid")
        div(class="container" style="margin-top: 70px;")
            if error
                div(class="alert alert-danger") Todos los campos deben estar llenos
            h1(style ="margin-top: 20px; font-weight: bold; text-align: center; margin-bottom: 1.5rem") Registrar Libro
            div(class="card", style="max-width: 30rem; margin: 0 auto")
                div(class="card-body")
                    form(action="/add_book", method="post") 
                        div(class="form-group")
                            label(for="name", class="form-label", style="font-weight: bold") Nombre del Libro
                            input(type="text", name="name", class="form-control", style="margin-bottom: 10px", require)
                        div 
                            label(for="author", class="form-label", style="font-weight: bold") Autor del libro
                            input(type="text", name="author", class="form-control", style="margin-bottom: 10px", require)
                        div 
                            label(for="stock", class="form-label", style="font-weight: bold") Cantidad
                            input(type="number", name="stock", class="form-control", style="margin-bottom: 10px", require)
                        div 
                            label(for="state", class="form-label", style="font-weight: bold") Estado
                            select(class="form-select form-select-lg mb-3" name="state" aria-label=".form-select-lg example")
                                option(selected name="state") Selecciona un estado
                                option(name="state", value="Disponible") Disponible
                                option(name="state", value="No Disponible") No Disponible
                        div(class="d-grid gap-2 col-6 mx-auto") 
                            button(type="submit", class="boton_agregar") Agregar Libro   
                                i(class="fa-regular fa-square-plus")